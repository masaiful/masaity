{
  "name": "fotis.xyz",
  "version": "1.0.0",
  "description": "Personal blog of Fotis Papadogeorgopoulos",
  "scripts": {
    "build": "NODE_ENV=production npm-run-all -s clean fonts:fetch build:css build:js build:join-manifests build:site build:postprocess build:inject-sw-manifest",
    "build:js": "rollup --config rollup.config.js",
    "build:site": "ELEVENTY_ENV=production eleventy",
    "build:css": "postcss src/css/*.css --dir _site/css/",
    "build:postprocess": "NODE_DIR=. node postprocessing/process.js",
    "build:join-manifests": "node postprocessing/join-manifests.js",
    "build:inject-sw-manifest": "node postprocessing/inject-sw-manifest",
    "fonts:fetch": "wget -O Fonts.zip $FONT_CDN_URL; unzip Fonts.zip -d ./src/fonts; rm Fonts.zip",
    "clean": "rimraf _site/",
    "dev": "NODE_ENV=development npm-run-all -p dev:site dev:css dev:js",
    "dev:js": "rollup --config rollup.config.js --watch",
    "dev:site": "ELEVENTY_ENV=development eleventy --watch --serve",
    "dev:css": "postcss src/css/*.css --dir _site/css/ --watch",
    "prod": "npm-run-all -s build serve",
    "serve": "serve _site --listen 8000",
    "debug": "DEBUG=* npx eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/fpapado/fotis.xyz"
  },
  "bugs": {
    "url": "git://github.com/fpapado/fotis.xyz/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@fpapado/eleventy-plugin-syntaxhighlight": "^3.0.0",
    "autoprefixer": "^9.7.3",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "lodash": "^4.17.15",
    "luxon": "^1.21.3",
    "markdown-it": "^10.0.0",
    "metalsmith": "^2.3.0",
    "metalsmith-inline-critical-css": "^1.0.0-beta.4",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.26",
    "postcss-cli": "^7.1.0",
    "postcss-hash": "^1.0.2",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "pretty-bytes": "^5.3.0",
    "prismjs": "^1.18.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-hash": "^1.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "sanitize-html": "^1.20.1",
    "serve": "^11.3.0",
    "workbox-build": "^4.3.1"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.0",
    "@fpapado/yt-player": "^0.10.0",
    "common-tags": "^1.8.0",
    "details-element-polyfill": "^2.4.0",
    "nanoid": "^2.1.9",
    "tachyons": "^4.11.1"
  }
}
