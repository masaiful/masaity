---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article class="pt4 pt5-ns pb4 vs4">
  <div class="vs3">
    {% Heading level=1 %}
      {{title}}
    {% endHeading %}

    <time class="db" datetime="{{date}}">
      {{date | readableDate}}
    </time>

    <div class="dn show-print author">
      by <span class="fw6">Fotis Papadogeorgopoulos</span>
    </div>
  </div>

  {# Contents #}
  {% MarkdownBlock %}
    {{ content | safe }}
  {% endMarkdownBlock %}
</article>

{# Webmentions #}
<section class="mb4 pt4 pb4 bt bb bw1 b--light-gray hide-print">
{% include "webmentionlist.njk" %}
</section>

{# Backlink #}
<section class="hide-print">
{% Text %}
  {% Link { href: '/' | url } %}
    ‚Üê Home
  {% endLink %}
{% endText %}
</section>

{# Load Codepen script if needed #}
{% if hasCodepen %}
  <script async src="https://static.codepen.io/assets/embed/ei.js"></script>
{% endif %}
